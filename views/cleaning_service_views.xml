<odoo>
    <record id="view_cleaning_service_tree" model="ir.ui.view">
        <field name="name">cleaning.service.tree</field>
        <field name="model">cleaning.service</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="price_per_hour"/>
            </list>
        </field>
    </record>

    <record id="view_cleaning_service_form" model="ir.ui.view">
        <field name="name">cleaning.service.form</field>
        <field name="model">cleaning.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="price_per_hour"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cleaning_service" model="ir.actions.act_window">
        <field name="name">Cleaning Services</field>
        <field name="res_model">cleaning.service</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_cleaning_services" name="Services" parent="menu_cleaning_root" action="action_cleaning_service"/>
</odoo>
