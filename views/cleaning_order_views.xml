<odoo>
    <record id="view_cleaning_order_tree" model="ir.ui.view">
        <field name="name">cleaning.order.list</field>
        <field name="model">cleaning.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="customer_id"/>
                <field name="service_id"/>
                <field name="hours"/>
                <field name="total_price"/>
                <field name="state" readonly="1"/>
<field name="cleaner_id"/>

            </list>
        </field>
    </record>

    <record id="view_cleaning_order_form" model="ir.ui.view">
        <field name="name">cleaning.order.form</field>
        <field name="model">cleaning.order</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                
                    <group>
                        <header>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary"/>
                        <button name="action_done" string="Done" type="object" class="btn-success" /> 
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" />
                        <button name="action_reset_to_draft" string="Reset to Draft" type="object" class="btn-warning" />
                        <button name="action_create_invoice" string="Create Invoice" type="object" class="btn-success" />
<field name="state" widget="statusbar" statusbar_visible="draft,confirmed,quoted,invoiced,done,cancelled"/>

                    </header>
                        <field name="customer_id"/>
                        <field name="service_id"/>
                        <field name="price_per_hour"/>
                        <field name="hours"/>
                        <field name="total_price" readonly="1"/>
                        <field name="state" readonly="1"/>
                        <field name="cleaner_id"/>

                    </group>
                    <chatter>
    <field name="message_follower_ids" widget="mail_followers"/>
    <field name="activity_ids" widget="mail_activity"/>
    <field name="message_ids" widget="mail_thread"/>
</chatter>
                </sheet>
       
            </form>
        </field>
    </record>
<record id="view_cleaning_order_kanban" model="ir.ui.view">
    <field name="name">cleaning.order.kanban</field>
    <field name="model">cleaning.order</field>
    <field name="arch" type="xml">
        <kanban default_group_by="state">
        <!-- 🔷 يعني الأعمدة في الكانبان تتقسم تلقائياً حسب حالة state. -->
            <field name="customer_id"/>
            <field name="service_id"/>
            <field name="hours"/>
            <field name="total_price"/>
            <field name="state"/>
            <templates>
                <t t-name="kanban-box">
                <!-- t-name="kanban-box" هو القالب الافتراضي لكل بطاقة. -->
                    <div class="oe_kanban_global_click">
                    <!-- oe_kanban_global_click يجعل البطاقة قابلة للنقر لفتح الفورم. -->
                        <strong><field name="customer_id"/></strong><br/>
                        Service: <field name="service_id"/><br/>
                        Hours: <field name="hours"/><br/>
                        Total: <field name="total_price"/><br/>
                      
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>

    <record id="action_cleaning_order" model="ir.actions.act_window">
        <field name="name">Cleaning Orders</field>
        <field name="res_model">cleaning.order</field>
        <field name="view_mode">list,form,kanban</field>
    </record>


    <menuitem id="menu_cleaning_root" name="Cleaning Service"/>
    <menuitem id="menu_cleaning_orders" name="Orders" parent="menu_cleaning_root" action="action_cleaning_order"/>
</odoo>
